{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx", // or "react" if you're using an older version of React
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
